@model WebMVC.Application.ViewModels.Recipe.ListViewModel
@{
    ViewData["Title"] = "Recipe Lists";
}

<h2>Recipe List</h2>

<form method="get" asp-action="Index" class="mb-3">
    <div class="row g-2">
        <div class="col">
            <input type="text" name="searchName" value="@Model.Query.SearchName" class="form-control" placeholder="Recipe Name" />
        </div>
        <div class="col">
            <input type="text" name="searchIngredient" value="@Model.Query.SearchIngredient" class="form-control" placeholder="Ingredient" />
        </div>
        <div class="col">
            <input type="text" name="searchCategory" value="@Model.Query.SearchCategory" class="form-control" placeholder="Category" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>

<a asp-controller="Recipe" asp-action="Create" class="btn btn-primary mb-3">
    Create New Recipe
</a>

@if (!Model.Recipes.Items.Any())
{
    <p>No Recipes.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Recipe</th>
                <th>Tags</th>
                <th>Prep Time</th>
                <th>Cook Time</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var recipe in Model.Recipes.Items)
        {
            <tr>
                <td>@recipe.Name</td>
                <td>
                    @if (recipe.Categories != null && recipe.Categories.Count > 0)
                    {
                        foreach (var rc in recipe.Categories)
                        {
                            @rc.Name
                            if (rc != recipe.Categories.Last())
                            {
                                @:,
                            }
                        }
                    }
                </td>
                <td>@(recipe.PrepTimeMinutes/60)h @(recipe.PrepTimeMinutes%60)min</td>
                    <td>@(recipe.CookTimeMinutes / 60)h @(recipe.CookTimeMinutes % 60)min</td>
                <td>
                    <a asp-controller="Recipe" asp-action="Details" asp-route-id="@recipe.Id" class="btn btn-sm btn-info">View</a>
                    <a asp-controller="Recipe" asp-action="Edit" asp-route-id="@recipe.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-controller="Recipe" asp-action="Delete" asp-route-id="@recipe.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <nav>
        <ul class="pagination">
            @if (Model.Recipes.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-searchName="@Model.Query.SearchName"
                       asp-route-searchIngredient="@Model.Query.SearchIngredient"
                       asp-route-searchCategory="@Model.Query.SearchCategory"
                       asp-route-pageNumber="@(Model.Recipes.PageNumber - 1)"
                       asp-route-pageSize="@Model.Recipes.PageSize">Previous</a>
                </li>
            }
            <li class="page-item active"><span class="page-link">@Model.Recipes.PageNumber</span></li>
            @if (Model.Recipes.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-searchName="@Model.Query.SearchName"
                       asp-route-searchIngredient="@Model.Query.SearchIngredient"
                       asp-route-searchCategory="@Model.Query.SearchCategory"
                       asp-route-pageNumber="@(Model.Recipes.PageNumber + 1)"
                       asp-route-pageSize="@Model.Recipes.PageSize">Next</a>
                </li>
            }
        </ul>
    </nav>
}