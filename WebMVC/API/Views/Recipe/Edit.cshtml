@model WebMVC.Models.ViewModels.RecipeCreateViewModel
@{
    ViewData["Title"] = "Edit Recipe";
    var recipeId = ViewBag.RecipeId;
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<h2 class="mb-4">Edit Recipe Details: @Model.Name</h2>

<!-- EDIT RECIPE FORM -->
<form asp-controller="Recipe" asp-action="UpdateRecipe" asp-route-id="@recipeId" method="post" class="mb-4">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label asp-for="Name" class="form-label fw-bold">Recipe Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="row mb-3">
        <div class="col">
            <label asp-for="PrepTime" class="form-label">Prep Time</label>
            <input asp-for="PrepTime" type="number" class="form-control" min="0" />
        </div>
        <div class="col">
            <label asp-for="CookTime" class="form-label">Cook Time</label>
            <input asp-for="CookTime" type="number" class="form-control" min="0" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Save Recipe Info</button>
</form>

<!-- CATEGORY FORM -->
<div class="mb-4">
    <label class="fw-bold mb-2">Categories:</label>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Category</th>
                <th style="width: 1%;"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td colspan="2">
                    <form asp-controller="Recipe" asp-action="AddCategory" asp-route-id="@recipeId" method="post" class="d-flex">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="CategoryId" id="NewCategoryId-hidden" />
                        <select id="NewCategoryId" class="form-select me-2"></select>
                        <button type="submit" class="btn btn-primary">Add</button>
                    </form>
                </td>
            </tr>
            @foreach (var cat in Model.Categories)
            {
                <tr>
                    <td>@cat.CategoryName</td>
                    <td>
                        <form method="post" asp-controller="Recipe" asp-action="RemoveCategory" asp-route-id="@recipeId" asp-route-categoryId="@cat.CategoryId" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <form asp-controller="Recipe" asp-action="CreateCategory" asp-route-id="@recipeId" method="post" class="input-group mt-2">
        @Html.AntiForgeryToken()
        <label for="NewCategoryName" class="input-group-text"><strong>Create</strong></label>
        <input type="text" class="form-control" id="NewCategoryName" name="Name" placeholder="New Category" />
        <button type="submit" class="btn btn-success">Create</button>
    </form>
</div>


<!-- INGREDIENT FORM -->
<div class="mb-4">
    <label class="fw-bold mb-2">Ingredients:</label>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Ingredient</th>
                <th>Amount</th>
                <th>Quantity</th>
                <th style="width: 1%;"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <form asp-controller="Recipe" asp-action="AddIngredient" asp-route-id="@recipeId" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="IngredientId" id="NewIngredientId-hidden" />
                    <input type="hidden" name="QuantityId" id="NewIngredientQuantityId-hidden" />
                    <td>
                        <select id="NewIngredientId" class="form-select"></select>
                    </td>
                    <td>
                        <input class="form-control" type="number" step="0.01" min="0" name="Amount" placeholder="Amount" />
                    </td>
                    <td>
                        <select id="NewIngredientQuantityId" class="form-select"></select>
                    </td>
                    <td>
                        <button type="submit" class="btn btn-primary">Add</button>
                    </td>
                </form>
            </tr>
            @foreach (var ing in Model.Ingredients)
            {
                <tr>
                    <td>@ing.IngredientName</td>
                    <td>@ing.Amount</td>
                    <td>@ing.QuantityName</td>
                    <td>
                        <form method="post" asp-controller="Recipe" asp-action="RemoveIngredient" asp-route-id="@recipeId" asp-route-ingredientId="@ing.IngredientId" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <form asp-controller="Recipe" asp-action="CreateIngredient" asp-route-id="@recipeId" method="post" class="input-group mb-2">
        @Html.AntiForgeryToken()
        <label for="NewIngredientName" class="input-group-text"><strong>Create Ingredient</strong></label>
        <input type="text" class="form-control" id="NewIngredientName" name="Name" placeholder="Ingredient Name" />
        <button type="submit" class="btn btn-success">Create</button>
    </form>

    <form asp-controller="Recipe" asp-action="CreateQuantity" asp-route-id="@recipeId" method="post" class="input-group">
        @Html.AntiForgeryToken()
        <label for="NewQuantityName" class="input-group-text"><strong>Create Quantity</strong></label>
        <input type="text" class="form-control" id="NewQuantityName" name="Name" placeholder="Quantity Name" />
        <button type="submit" class="btn btn-success">Create</button>
    </form>
</div>


<!-- STEP FORM -->
<div class="mb-4">
    <label class="fw-bold mb-2">Instructions:</label>
    <table class="table table-striped">
        <thead>
            <tr>
                <th style="width: 10%;">Step #</th>
                <th>Description</th>
                <th style="width: 1%;"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <form asp-controller="Recipe" asp-action="AddStep" asp-route-id="@recipeId" method="post">
                    @Html.AntiForgeryToken()
                    <td>—</td>
                    <td>
                        <input name="Description" class="form-control" placeholder="New instruction step..." />
                    </td>
                    <td>
                        <button type="submit" class="btn btn-primary">Add</button>
                    </td>
                </form>
            </tr>
            @foreach (var step in Model.Steps.OrderBy(s => s.StepNumber))
            {
                <tr>
                    <td>@step.StepNumber</td>
                    <td>@step.Description</td>
                    <td>
                        <form method="post" asp-controller="Recipe" asp-action="RemoveStep" asp-route-id="@recipeId" asp-route-instructionId="@step.StepNumber" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<!-- FINAL ACTIONS -->
<div class="mb-4">
    <a asp-controller="Recipe" asp-action="Details" asp-route-id="@recipeId" class="btn btn-sm btn-primary">GoTo View Recipe</a>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>

</div>

@section Scripts {
    <script>
        function initSelect2(selector, apiUrl, placeholderText, paramKey) {
            $(selector).select2({
                placeholder: placeholderText,
                minimumInputLength: 0,
                ajax: {
                    url: apiUrl,
                    dataType: 'json',
                    delay: 250,
                    data: function (params) {
                        const query = {
                            pageNumber: 1,
                            pageSize: 50
                        };
                        if (params.term) {
                            query[paramKey] = params.term;
                        }
                        return query;
                    },
                    processResults: function (data) {
                        return {
                            results: data.map(function (item) {
                                return {
                                    id: item.id,
                                    text: item.name
                                };
                            })
                        };
                    },
                    cache: true
                }
            });

            $(selector).on('select2:open', function () {
                let input = $('.select2-search__field');
                if (input.length > 0) {
                    input.trigger('input');
                }
            });
        }

        $(document).ready(function () {
            initSelect2("#NewCategoryId", "/api/category", "Search for a category", "categoryName");
            initSelect2("#NewIngredientId", "/api/ingredient", "Search for an ingredient", "ingredientName");
            initSelect2("#NewIngredientQuantityId", "/api/quantity", "Search for a quantity", "quantityName");

            $('#NewCategoryId').on('change', function () {
                $('#NewCategoryId-hidden').val($(this).val());
            });
            $('#NewIngredientId').on('change', function () {
                $('#NewIngredientId-hidden').val($(this).val());
            });
            $('#NewIngredientQuantityId').on('change', function () {
                $('#NewIngredientQuantityId-hidden').val($(this).val());
            });
        });
    </script>
}
